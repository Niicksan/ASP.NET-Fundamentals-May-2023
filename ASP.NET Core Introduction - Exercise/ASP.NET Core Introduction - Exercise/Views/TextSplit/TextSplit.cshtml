@model ASP.NET_Core_Introduction___Exercise.ViewModels.TextSplit.TextSplitViewModel;

@{
    ViewData["Title"] = "Text Splitter";
}

<form asp-controller="TextSplit" asp-action="Split" method="post">
    <div class="row row-cols-12 d-flex flex-column justify-content-center">
        <div class="col-12">
            <input asp-for="@Model.TextToSplit" class="mr-2" />
            <button type="submit" class="btn btn-primary">
                Split Text
            </button>
        </div>
        <span asp-validation-for="@Model.TextToSplit" class="small text-danger col-2"></span>
        <div class="col-2 mt-6">
            <textarea rows="10">@Model.SplitText</textarea>
        </div>
    </div>
</form>